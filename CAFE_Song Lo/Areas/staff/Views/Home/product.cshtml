                {
                    <div class="product_Item box" style="width: 200px; height: 377px;">
                        <div class="ribbon"><span>Best Sell</span></div>
                        <div class="productImage">
                            <a href="#"><img src="~/assets/image/icon/cà phê/@item.image" alt="@item.name" /></a>
                        </div>
                        <div class="product_info">
                            <h3 id="product_name"><a href="#">@item.name</a></h3>
                            <p id="product_price">@item.price đ</p>
                            <div><a href="#" id="detail_btn">Thông tin</a></div>
                        </div>
                    </div>
                    break;
                }
