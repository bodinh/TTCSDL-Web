@{
    Layout = null;
}
@model CAFE_Song_Lo.Models.account
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/assets/login/Login.css")
</head>
<body>
    <div class="login-form">

        @using (Html.BeginForm("Result", "Login", FormMethod.Post))
        {
            <h1 style="user-select:none">Login</h1>
            <div class="txtb">
                @Html.TextBoxFor(model => model.username, new { value = "" })
                <span></span>
            </div>
            <div class="txtb">
                @Html.TextBoxFor(model => model.password, new { value = "", type = "password" })
                <span></span>
            </div>
            <button type="submit" class="logbnt">Login</button>
            if (TempData["LoginMessage"] != null)
            {
                <div id="AlertBox" style="color:red;padding-top:20px;">
                    @TempData["LoginMessage"]
                </div>}
    <div id="AlertBox" style="color:red;padding-top:20px;">
        @Html.ValidationMessageFor(model => model.username) <br />
        @Html.ValidationMessageFor(model => model.password)
    </div>
        <script>
            $(".txtb input").on("focus", function () {
                $(this).addClass("focus");
            });

            $(".txtb input").on("blur", function () {
                if ($(this).val() == "")
                    $(this).removeClass("focus");
            });
        </script>

        }

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>



















